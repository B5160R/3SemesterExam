@page
@model Webapp.Pages.Booking.CreateModel
@{
}

<h2>Opret Booking</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <label asp-for="CreateViewModel.Title"></label>
                <input asp-for="CreateViewModel.Title" class="form-control" />
                <label asp-for="CreateViewModel.StartDato"></label>
                <input asp-for="CreateViewModel.StartDato" class="form-control" />
                <label asp-for="CreateViewModel.SlutDato"></label>
                <input asp-for="CreateViewModel.SlutDato" class="form-control" />
                <label asp-for="CreateViewModel.Kommentar"></label>
                <input asp-for="CreateViewModel.Kommentar" class="form-control" />
            </div>
            <button class="btn btn-success" type="submit" class="btn btn-default" asp-route-id="@Model._medarbejderId">Opret Booking</button>
        </form>
    </div>
</div>