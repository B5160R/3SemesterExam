@page
@model Webapp.Pages.Kompetencer.CreateModel
@{
}
<h2>Tilføj ny kompetence fra listen</h2>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            @foreach (var item in Model.IndexViewModel)
            {
                <p>
                    <button class="btn btn-primary" type="submit" class="btn btn-default" asp-route-kompetenceFromListId="@item.Id" asp-route-medarbejderId="@Model._medarbejderId">@item.Egenskab</button>
                </p>
            }

            <br/>
            <h2>Opret en ny kompetence!</h2>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label asp-for="CreateViewModel.Egenskab"></label>
                    <input asp-for="CreateViewModel.Egenskab" class="form-control" />
                </div>
                <button class="btn btn-success" type="submit" class="btn btn-default" asp-route-medarbejderId="@Model._medarbejderId">Opret kompetence!</button>
            </form>
        </div>
    </div>